{
  "name": "tupatrimonio-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:marketing": "npm run dev --workspace=apps/marketing",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=apps/web",
    "build:marketing": "npm run build --workspace=apps/marketing",
    "start": "npm run start --workspace=apps/web",
    "start:marketing": "npm run start --workspace=apps/marketing",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "eslint": "^9",
    "typescript": "^5"
  }
}
